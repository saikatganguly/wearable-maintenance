<html>
	<head>
	<title>Login</title>
	<link href="/stylesheets/bootstrap.css" rel="stylesheet">
	<link href="/stylesheets/index.css" rel="stylesheet"> 
	<link href="/stylesheets/login.css" rel="stylesheet">
	<script type="text/javascript" src="/javascripts/jquery-2.1.1.js"></script>
	<script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
	<script type="text/javascript" src="/javascripts/userregistration.js"></script>
	</head>
	<body>
		<!-- start of header -->
		<nav class="navbar " style="background:white;">
			<div class="container">
			<!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    </button>
				    <div class="navbar-brand" ><img class="img-responsive"src="images/logo.png" style="margin-top:1px;height:62px"/ >
					</div>
				</div>
				
			    <!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				      
				    <ul class="nav navbar-nav navbar-right">
					    
					   <li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-weight: bold;background-color: #53b2d8;padding-top:30px;padding-bottom:32px;color:white !important;margin-right:-12">Login <span class="caret"></span></a>
				         						
				        </li>
					</ul>
					   
				</div>
			</div><!-- /.container-fluid -->
		</nav>
		<!-- end of header -->
		
		<!-- start of container -->
		<div >  
			<div class="container-fluid" style="background:rgb(254,249,245);height:87%">
				<div class="row">
					<div class="col-md-12">
						<div class="container">
							<div class="row" style="margin-top:1px;margin-bottom:5px">
								<div class="col-md-offset-2 col-md-8">
									<div style="margin-top:6%;margin-left:9%">
										<span style="font-size:24px;color:#29A6CF">Login</span>
										<hr style="border-color:rgb(20,119,160) -moz-use-text-color -moz-use-text-color ">
									</div>
								</div>
							</div>
							<div class="row" style="margin-top:5%;margin-bottom:1%">
									<div class="col-md-offset-5 col-md-7">
										<span style="color:red"><%= message %><span>
									</div>
								</div>
							<form action="/login" method="post">
								<div class="row" style="margin-top:1%;margin-bottom:2%">
									<div class="col-md-offset-5 col-md-3">
										<input id="username" name="username"  class="textlogin" type="text" placeholder="User Name" tabindex="1" autocomplete="off" required="true"/>
									</div>
								</div>
								
								<div class="row" style="margin-top:1px;margin-bottom:5px">
									<div class="col-md-offset-5 col-md-3">
										<input id="password" name="password" class="textlogin" type="password" placeholder="Password" tabindex="2" required="true"/>
									</div>
								</div>
								
								<div class="row" style="margin-top:15px;margin-bottom:5px">
									<div class="col-md-offset-5 col-md-3">
										<div class="squaredThree left">
											<input type="checkbox" value="None" id="squaredThree" name="check" tabindex="3"/>
											<label for="squaredThree" style="margin-left:-13px;margin-top:3px"></label>
										</div>
										<div style="margin-top:-13px;margin-left:29px;color:#0b9dda">
											<span>Remember me</span>
										</div>
									</div>
									
								</div>
								
								<div class="row" style="margin-top:1px;margin-bottom:5px">
									<div class="col-md-offset-5 col-md-3">
										<button id="submit" class="btn btn-second loginbutton"  type="submit" tabindex="4">
									<b> Login</b></button>
									</div>
								</div>
							</form>
							<div class="row" style="margin-top:1px;margin-bottom:5px">
								<div class="col-md-offset-6 col-md-2">
									<a href="" style="color:#29A6CF !important;float:right;text-decoration:underline" tabindex="5">Forgot password??</a>
								</div>
							</div>
							
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end of container -->
		
		<!-- start of footer 
		<div style="height:10%;">
		
		</div> 
		 end of footer -->
	</body>
</html>

