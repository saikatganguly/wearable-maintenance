<html>
	<head>
	<title>User Registration</title>
	<script type="text/javascript" src="/javascripts/jquery-2.1.1.js"></script>
	<script type="text/javascript" src="/javascripts/userregistration.js"></script>

	</head>
	<body>
		<h3> User Registration:</h3>
		<form action="/user/register" onsubmit="return validate()" method="post">
		
			<div style="margin-top:1%">
				<label>Name:</label>
				<input type="text" placeholder="Full Name" id="name" name="name" tabindex="1" onfocus="removeMessage('errUserName');" autocomplete="off">
				<label style="color:red;" id="errUserName"></label>
			</div>
		
			<div style="margin-top:1%">
				<label> User Name:</label>
				<input type="text" placeholder="User Name" id="userName" name="username" tabindex="2" onfocus="removeMessage('errUserName');" autocomplete="off">
				<label style="color:red;" id="errUserName"></label>
			</div>
			
			<div style="margin-top:1%">
			
				<label> Email:</label>
				<input type="text" placeholder="Email" id="email" name="email" tabindex="3" onfocus="removeMessage('errEmail');" autocomplete="off">
				<label style="color:red;" id="errEmail"></label>
			</div>
			
			<div style="margin-top:1%">
				<label> Password:</label>
				<input type="password" placeholder="Password" id="password" name="password" tabindex="4" onfocus="removeMessage('errPassword');" autocomplete="off">
				<label style="color:red;" id="errPassword"></label>
			</div>
			
			<div style="margin-top:1%">
				<label> Retype Password:</label>
				<input type="password" placeholder="Retype Password" id="retypepassword" tabindex="5" onfocus="removeMessage('errRetypePassword');"  
				autocomplete="off">
				<label style="color:red;" id="errRetypePassword"></label>
			</div>
			
			<div style="margin-top:1%">
				<input type="submit" name="submit" value="SIGN UP"   tabindex="6" />
			</div>
		</form>
	</body>
</html>